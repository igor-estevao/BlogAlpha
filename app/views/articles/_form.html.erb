<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render partial: "layouts/errors", locals: { errors: @article.errors } %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <% if @article.main_image.attached? %>
            <%= image_tag @article.main_image, style: "width: 200px; display:block"%>
          <% end %>
          <%= f.label :main_image %>
          <%= f.file_field :main_image, class: "form-control-file" %>
        </div>
        <br>
        
        <% if false %>
          
        
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%#= render partial: "edition_bar" %>
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded tinymce", placeholder: "Descritption of article..." %>
            <%#= tinymce %>
          </div>
        </div>
        <br>
        <% end %>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %>
    </div>

    <%= link_to "[ Cancel and return to Articles Listing ]", articles_path, class: "text-info" %>

  </div>
</div>
