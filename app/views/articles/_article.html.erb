<div class="card text-center shadow mb-5 bg-white roundedd">
  <div class="card-header font-italic">
    <em>by author name</em> 
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
    
    <div class="card-text text-start">
      <%= truncate(simple_format(article.description), length: 100) %>
    </div>
    
    <%= link_to 'Show', article_path(article), class: "btn btn-outline-success" %>
    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
    <%= link_to 'Destroy', article_path(article), method: :delete, confirm: 'Are you sure?', class: "btn btn-outline-danger" %>
  </div>
  <div class="card-footer text-muted">
    <small>Created <%= time_ago_in_words article.created_at %> ago, Edited <%= time_ago_in_words article.updated_at %> ago</small>
  </div>
</div>