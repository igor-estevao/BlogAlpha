<div class="container text-center">
  <h1><%= @article.title %></h1>
  <div class="card text-center shadow mb-5 bg-white roundedd">
    <div class="card-header font-italic">
      <em>by author name</em> 
    </div>
    <div class="card-body">      
      <div class="card-text text-start"><%= simple_format @article.description %></div>
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %>
      <%= link_to 'Destroy', article_path(@article), method: :delete, confirm: 'Are you sure?', class: "btn btn-outline-danger" %>
    </div>
    <div class="card-footer text-muted">
      <small>Created <%= time_ago_in_words @article.created_at %> ago, Edited <%= time_ago_in_words @article.updated_at %> ago</small>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_article_path(@article) %> | <%= link_to "Delete this article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %> | <%= link_to "Back to Articles", articles_path %>